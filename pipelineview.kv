#:kivy 2.3.0

<PipelineView>:
    size_hint: 1,1
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1,1
        BoxLayout:
            #Â button bar
            orientation: 'horizontal'
            size_hint: 1, None
            size_y: 50
            Button:
                text: "Run pipeline"
                size_hint: 0.2, 1
                pos_hint: {'center_x': .225, 'center_y': .5}
                id: run_button
                on_press: app.run_pipeline()
            Button:
                text: "Reset pipeline"
                size_hint: 0.2, 1
                pos_hint: {'center_x': .225, 'center_y': .5}
                id: run_button
                on_press: app.reset_pipeline()

        ScrollView:
            do_scroll: False, True
            id: scroll_view
            bar_width: dp(10)
            scroll_type: ['bars', 'content']
            size_hint: 1, 1
            # pos_hint: {'center_x': .5, 'center_y': .5}
            # pos_hint: {'x':0, 'y': .01}

            Flowchart:
                id: chart
                # size_hint: 1, 5
                size_hint_y: None
                size_hint_x: None
                size: self.parent.width, 5000

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size



<BackgroundColor>
    background_color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos





<Node>
    rect: [self.x, self.y, self.width, self.height]
    # size: self.texture_size
    background_color: 0, 0, 0, 0

    canvas.after:
        Color
            rgba: self.border_color

        Line
            width: 1.5
            close: True
            rectangle: self.rect
